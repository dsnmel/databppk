<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .sidebar {
            height: 100vh;
            background-color: hsl(210, 71.90%, 37.60%);
            padding: 20px;
            box-shadow: 0 4px 7px hsl(210, 71.90%, 37.60%);
        }

        .search-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 10px 20px;
            box-shadow: 0 4px 6px hsl(58, 82.00%, 52.00%);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .search-box {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #6c757d;
        }

        .search-box input {
            border: none;
            outline: none;
            background: none;
            color: #6c757d;
        }

        .search-box input::placeholder {
            color: #adb5bd;
        }

        .icon-group {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .icon-group img {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            object-fit: cover;
            box-shadow: hsl(210, 71.90%, 37.60%);
        }

        .icon-group .notification {
            position: relative;
        }

        .icon-group .notification::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 10px;
            height: 10px;
            background-color: red;
            border-radius: 50%;
        }

        .card {
            box-shadow: 0 4px 6px hsl(210, 71.90%, 37.60%);
            border: none;
        }

        .content {
            margin-top: 20px;
        }

        .mt-10 {
            margin-top: 15px;
            /* Ubah ke satuan lain seperti rem atau em jika diperlukan */
        }
    </style>
</head>

<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h5 class="text-primary mb-4" style="color: #FFD700;">
                <img src="/images/logo.png" alt="Logo" style="width: 150px; height: auto; margin-right: 10px;">
            </h5>
            <li class="nav-item" style="list-style: none; margin-top: 10px; margin-left: 3px;">
                <a class="nav-link" href="/" style="color: white;">
                    <i class="bi bi-house-fill" style="color: #FFD700; margin-right: 5px;"></i> Dashboard
                </a>
            </li>
            <li class="nav-item" style="list-style: none; margin-top: 10px; margin-left: 3px;">
                <a class="nav-link" href="/arsip" style="color: white;">
                    <i class="bi bi-graph-up" style="color: #FFD700; margin-right: 5px;"></i> Kearsipan
                </a>
            </li>
            <li class="nav-item" style="list-style: none; margin-top: 10px; margin-left: 3px;">
                <a class="nav-link" href="/grafik" style="color: white;">
                    <i class="bi bi-graph-up" style="color: #FFD700; margin-right: 5px;"></i> Grafik
                </a>
            </li>
            <li class="nav-item" style="list-style: none; margin-top: 10px; margin-left: 3px;">
                <a class="nav-link" href="/dataArsip" style="color: white;">
                    <i class="bi bi-graph-up" style="color: #FFD700; margin-right: 5px;"></i> Data
                </a>
            </li>
        </div>

        <!-- Konten Utama -->
        <div class="flex-grow-1">
            <!-- Search Bar -->
            <div class="search-container mt-3 mx-4">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text" placeholder="Search (Ctrl+/)" />
                </div>
                <div class="icon-group">
                    <i class="bi bi-globe"></i>
                    <i class="bi bi-brightness-high"></i>
                    <i class="bi bi-grid"></i>
                    <div class="notification">
                        <i class="bi bi-bell"></i>
                    </div>
                    <img src="img/account.jpg" alt="Profile Picture">
                </div>
            </div>
            <div class="container-fluid p-4 content">
                <!-- Grafik Analisis Data 1 -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="mb-3">
                                    <h5 class="card-title">Detail Data Kearsipan</h5>
                                    <div class="filter-container"
                                        style="display: flex; gap: 1rem; align-items: center;">
                                        <div>
                                            <label for="filterData" class="form-label">Pilih Fokus Data</label>
                                            <select id="filterData" class="form-select" onchange="filterData()">
                                                <option value="all">Semua Data</option>
                                                <option value="pengawasankeuangan">Pengawasan Keuangan</option>
                                                <option value="fgdKearsipan">FGD Kearsipan</option>
                                                <option value="kickOffpengawasan">Kick Off Pengawasan Keuangan </option>
                                                <option value="pemusnahanArsip">Pemusnahan Arsip Inaktif </option>
                                            </select>
                                        </div>
                                        <div>
                                            <label for="filterBulan" class="form-label">Pilih Bulan</label>
                                            <select id="filterBulan" class="form-select" onchange="filterData()">
                                                <option value="all">Semua Bulan</option>
                                                <option value="01">Januari</option>
                                                <option value="02">Februari</option>
                                                <option value="03">Maret</option>
                                                <option value="04">April</option>
                                                <option value="05">Mei</option>
                                                <option value="06">Juni</option>
                                                <option value="07">Juli</option>
                                                <option value="08">Agustus</option>
                                                <option value="09">September</option>
                                                <option value="10">Oktober</option>
                                                <option value="11">November</option>
                                                <option value="12">Desember</option>
                                            </select>
                                        </div>
                                        <div>
                                            <label for="filterTahun" class="form-label">Pilih Tahun</label>
                                            <select id="filterTahun" class="form-select" onchange="filterData()">
                                                <option value="all">Semua Tahun</option>
                                                <option value="2023">2023</option>
                                                <option value="2024">2024</option>
                                                <option value="2025">2025</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <p class="card-text">
                                    <!-- Tabel untuk Pengawasan Keuangan -->
                                <div class="table-pengawasankeuangan">
                                    <h6>Data Pengawasan Keuangan</h6>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">No</th>
                                                <th scope="col">Jenis Data</th>
                                                <th scope="col">Unit</th>
                                                <th scope="col">Kedudukan</th>
                                                <th scope="col">Nilai Pengawasan</th>
                                                <th scope="col">Tanggal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% dataKearsipan.forEach(function(data, index) { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= data.jenis_data %>
                                                    </td>
                                                    <td>
                                                        <%= data.unit %>
                                                    </td>
                                                    <td>
                                                        <%= data.kedudukan %>
                                                    </td>
                                                    <td>
                                                        <%= data.nilaiPengawasan %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(data.tanggal).toLocaleDateString('id-ID') %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Tabel untuk FGD Kearsipan -->
                                <div class="table-fgdKearsipan">
                                    <h6 style="margin-top: 10px;">Data FGD Kearsipan</h6>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">No</th>
                                                <th scope="col">Jenis Data</th>
                                                <th scope="col">Detail Kegiatan</th>
                                                <th scope="col">Tanggal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% dataFgd.forEach(function(data, index) { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= data.jenisdata %>
                                                    </td>
                                                    <td>
                                                        <%= data.detail_kegiatan %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(data.tanggal1).toLocaleDateString('id-ID') %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>

                                <div class="table-kickOffpengawasan">
                                    <h6 style="margin-top: 10px;">Data Kick Off Pengawasan</h6>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">No</th>
                                                <th scope="col">Jenis Data</th>
                                                <th scope="col">Detail Acara</th>
                                                <th scope="col">Tanggal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% datakickOff.forEach(function(data, index) { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= data.jenisData2 %>
                                                    </td>
                                                    <td>
                                                        <%= data.detail_acara %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(data.tanggal2).toLocaleDateString('id-ID') %>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- Tabel untuk Pemusnahan Arsip -->
                                <div class="table-pemusnahanarsip">
                                    <h6 style="margin-top: 10px;">Data Pemusnahan Arsip</h6>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">No</th>
                                                <th scope="col">Jenis Data</th>
                                                <th scope="col">Unit</th>
                                                <th scope="col">Kurun Waktu </th>
                                                <th scope="col">Jumlah </th>
                                                <th scope="col">Total PNPB </th>
                                                <th scope="col">Tanggal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% dataPemusnahan.forEach(function(data, index) { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= data.jenisdata1 %>
                                                    </td>
                                                    <td>
                                                        <%= data.unit %>
                                                    </td>
                                                    <td>
                                                        <%= data.kurunWaktu %>
                                                    </td>
                                                    <td>
                                                        <%= data.jumlah %>
                                                    </td>
                                                    <td>
                                                        <%= data.totalPNPB %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(data.tanggal3).toLocaleDateString('id-ID') %>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>

                                </p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
    function filterData() {
        const selectedValue = document.getElementById("filterData").value;
        const selectedBulan = document.getElementById("filterBulan").value;
        const selectedTahun = document.getElementById("filterTahun").value;

        // Define the tables
        const tablePengawasan = document.querySelector(".table-pengawasankeuangan");
        const tableFgd = document.querySelector(".table-fgdKearsipan");
        const tableKickOff = document.querySelector(".table-kickOffpengawasan");
        const tablePemusnahan = document.querySelector(".table-pemusnahanarsip");

        console.log("Filter Data:", selectedValue);
        console.log("Filter Bulan:", selectedBulan);
        console.log("Filter Tahun:", selectedTahun);

        // Hide all tables initially
        tablePengawasan.style.display = "none";
        tableFgd.style.display = "none";
        tableKickOff.style.display = "none";
        tablePemusnahan.style.display = "none";

        // Show the relevant table based on selected filter
        if (selectedValue === "pengawasankeuangan") {
            tablePengawasan.style.display = "table";
        } else if (selectedValue === "fgdKearsipan") {
            tableFgd.style.display = "table";
        } else if (selectedValue === "kickOffpengawasan") {
            tableKickOff.style.display = "table";
        } else if (selectedValue === "pemusnahanArsip") {
            tablePemusnahan.style.display = "table";
        } else {
            // Show all tables when "all" is selected
            tablePengawasan.style.display = "table";
            tableFgd.style.display = "table";
            tableKickOff.style.display = "table";
            tablePemusnahan.style.display = "table";
        }

        // Filtering by Bulan
        if (selectedBulan !== "all") {
            console.log(`Filter tabel untuk bulan: ${selectedBulan}`);
            // Add logic here to filter data by month
